model Services {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  slug        String   @unique
  icon        String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  subServices SubServices[]

  @@map("services")
}

model SubServices {
  id          Int      @id @default(autoincrement())
  idService   Int      @map("id_service")
  name        String
  description String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  service Services @relation(fields: [idService], references: [id], onDelete: Cascade)

  proposal Proposal[]

  @@map("sub_services")
}
